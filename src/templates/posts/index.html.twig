{% extends 'base.html.twig' %}

{% block title %}
    {{ page }}
{% endblock %}

{% block style %}
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        main {
            flex: 1;
        }
    </style>
{% endblock %}

{% block content %}
    {% if posts is empty %}
        <main class="grid-y align-center">
            <h1 class="h2 text-center">There are no articles to display</h1>
        </main>
    {% else %}
        <main>
            <h1 class="text-center margin-vertical-2">Articles</h1>
            <div class="grid-container">
                {% include 'blocks/articles.html.twig' %}
            </div>
        </main>
    {% endif %}
{% endblock %}